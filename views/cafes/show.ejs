<%- include('../partials/header') %>

<section id="show-page">
    <div>Cafe: </div>
    <div><%= cafe.name %></div>
    <div>Address: </div>
    <div><%= cafe.address %></div>
    <div>Hours: </div>
    <div><%= cafe.hours %></div>
    <div>Open Sundays: </div>
    <div><%= cafe.openSundays ? 'Yes' : 'No' %></div>
    <div><%= cafe.addedBy.name %></div>
  </section><br><br>
<!-- new markup below -->
<h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/cafes/<%= cafe._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<!-- below, rendering reviews -->

<% if (cafe.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% cafe.reviews.forEach(function(r) { %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>

  <%- include('../partials/footer') %>